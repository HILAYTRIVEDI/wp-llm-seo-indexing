# WP LLM SEO Indexing - Environment Configuration
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env files to version control

# Google Gemini API
# Get your key from: https://makersuite.google.com/app/apikey
WPLLMSEO_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API
# Get your key from: https://platform.openai.com/api-keys
WPLLMSEO_OPENAI_API_KEY=your_openai_api_key_here
WPLLMSEO_OPENAI_ORG_ID=your_organization_id_here

# Anthropic Claude API
# Get your key from: https://console.anthropic.com/settings/keys
WPLLMSEO_CLAUDE_API_KEY=your_claude_api_key_here

# WordPress Environment
WP_ENVIRONMENT_TYPE=development
# Options: development, staging, production

# Plugin Settings
WPLLMSEO_ENABLE_LOGGING=true
WPLLMSEO_LOG_LEVEL=info
# Options: error, warning, info, debug

# Rate Limiting (optional)
WPLLMSEO_RATE_LIMIT_ENABLED=true
WPLLMSEO_RATE_LIMIT_REQUESTS=100
WPLLMSEO_RATE_LIMIT_WINDOW=3600

# MCP Settings (v1.1.0+)
WPLLMSEO_MCP_ENABLED=true
WPLLMSEO_MCP_RESPECT_LLMS_TXT=true

# Security
WPLLMSEO_DISABLE_FILE_UPLOADS=false
WPLLMSEO_MAX_UPLOAD_SIZE=10485760
# Size in bytes (default: 10MB)

# Performance
WPLLMSEO_CACHE_TTL=3600
# Cache duration in seconds (default: 1 hour)

WPLLMSEO_BATCH_SIZE=10
# Number of jobs to process per batch

WPLLMSEO_WORKER_INTERVAL=60
# Worker run interval in seconds
